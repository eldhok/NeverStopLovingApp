<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="AppThemeFull" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPurpleLight</item>
        <item name="colorPrimaryDark">@color/colorPurpleLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="h2">
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:padding">@dimen/space20</item>
        <item name="android:background">@drawable/bg_top_grey</item>
    </style>

    <style name="h3Info">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/colorTextInfo</item>
    </style>

    <style name="ButtonPink">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space20</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@android:color/white</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>



