<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/space10"
    android:layout_marginLeft="@dimen/spaceLR">
    <LinearLayout
        android:id="@+id/l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">


        <RelativeLayout
            android:id="@+id/la"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <com.meg7.widget.CircleImageView
                android:id="@+id/image_chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop" />
       <!--
        <ImageView
            android:id="@+id/image_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/grid_el"
        />
        -->

        <TextView
            android:id="@+id/imText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

</RelativeLayout>
        <TextView
            android:id="@+id/timestamp"
            android:layout_marginRight="@dimen/space10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space5"
            android:drawableRight="@drawable/ic_clock"
            android:text="5:04pm"
            android:textColor="@color/colorTextInfo"
            android:textSize="@dimen/h4"
            />
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space10"
            android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/h3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_chat_me"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/date"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space10"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 September"
            android:textColor="@color/colorTextInfo"
            android:textSize="@dimen/h3"
            />
    </LinearLayout>


</RelativeLayout>